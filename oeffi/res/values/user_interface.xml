    <string name="user_interface_voice_control_toggle_on_title">Listening for voice commands</string>
    <string name="user_interface_voice_control_toggle_off_title">Not listening for voice commands</string>
    <string name="user_interface_voice_control_trigger_title">Start voice input</string>
    <string name="user_interface_voice_control_help_short_text">When <b>opening the main menu</b>,
        the app will listen for your voice input.
        <u>Tap here to show more …</u>
    </string>
    <string name="user_interface_voice_control_help_long_text">When <b>opening the main menu</b>,
        the app will listen for your voice input.
        <b>Get directions by saying</b>
        \"<i>(TIME) from Hamburg to Berlin Spandau</i>\"
        or \"<i>(TIME) from Hamburg via Hannover to Berlin Spandau</i>\"
        or \"<i>(TIME) von Hamburg to Berlin Spandau via Hannover</i>\".
        <b>Get departures by saying</b>:
        \"<i>(TIME) departures at Köln Hauptbahnhof</i>\".
        Where \"(TIME)\" is optional and could be
        \"<i>at 12 o\'clock</i>\",
        \"<i>at twelve thirteen</i>\",
        \"<i>in one minute</i>\",
        \"<i>in ten minutes</i>\",
        \"<i>in one hour</i>\",
        \"<i>in two hours</i>\".
    </string>


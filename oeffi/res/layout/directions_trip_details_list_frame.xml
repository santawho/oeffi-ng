<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/directions_trip_details_list_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:elevation="@dimen/elevation_content">

    <include layout="@layout/action_bar" />

    <FrameLayout
        android:id="@+id/directions_trip_details_list_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="48dp">

            <LinearLayout
                android:id="@+id/directions_trip_details_legs_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/list_divider"
                android:orientation="vertical"
                android:showDividers="middle">

                <TextView
                    android:id="@+id/directions_trip_details_devinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_divider"
                    android:paddingHorizontal="@dimen/text_padding_horizontal_lax"
                    android:paddingVertical="@dimen/text_padding_vertical_lax"
                    android:gravity="end"
                    android:textSize="@dimen/font_size_tiny"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_divider"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/text_padding_horizontal"
                    android:paddingVertical="@dimen/text_padding_vertical_lax">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingHorizontal="@dimen/text_padding_horizontal"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <de.schildbach.oeffi.directions.LocationTextView
                                android:id="@+id/directions_trip_details_location_from"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:drawablePadding="@dimen/text_padding_horizontal_lax" />
                            <de.schildbach.oeffi.directions.LocationTextView
                                android:id="@+id/directions_trip_details_location_to"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:drawablePadding="@dimen/text_padding_horizontal_lax" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/directions_trip_details_duration"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/directions_trip_details_numchanges"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/directions_trip_details_toggle_fares"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:background="@color/bg_divider_highlight"
                        android:layout_marginRight="@dimen/text_padding_horizontal_lax"
                        android:paddingHorizontal="@dimen/text_padding_horizontal"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/directions_trip_details_toggle_fares_symbol"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="@dimen/font_size_large"/>
                        <de.schildbach.oeffi.util.ToggleImageButton
                            android:id="@+id/directions_trip_details_toggle_fares_button"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_expand_black_24dp"/>
                    </LinearLayout>
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableLayout
                        android:id="@+id/directions_trip_details_fares"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:background="@color/bg_divider"
                        android:baselineAligned="true"
                        android:paddingBottom="@dimen/text_padding_vertical_lax"
                        android:paddingLeft="@dimen/text_padding_horizontal_verylax"
                        android:paddingRight="@dimen/text_padding_horizontal_verylax"
                        android:paddingTop="@dimen/text_padding_vertical_lax"
                        android:stretchColumns="2" />
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/directions_trip_details_not_feasible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_highlighted_darkdefault"
                    android:textColor="@color/fg_significant_darkdefault"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_size_xlarge"
                    android:text="@string/directions_trip_details_not_travelable"
                    android:padding="8dp"
                    android:gravity="center"
                    android:visibility="gone"/>

                <View
                    android:id="@+id/directions_trip_details_legs_start_here"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/directions_trip_details_finished"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/directions_trip_details_finished"
                    android:paddingTop="@dimen/text_padding_vertical"
                    android:paddingBottom="@dimen/text_padding_vertical"
                    android:gravity="center"
                    android:textSize="@dimen/font_size_large"
                    android:background="@color/bg_trip_details_time_left"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/directions_trip_details_footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_settings_input_antenna_grey600_18dp"
                    android:drawablePadding="@dimen/text_padding_horizontal_lax"
                    android:drawableTint="@color/fg_less_significant"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="@dimen/text_padding_vertical_lax"
                    android:paddingLeft="@dimen/text_padding_horizontal_lax"
                    android:paddingRight="@dimen/text_padding_horizontal_lax"
                    android:paddingTop="@dimen/text_padding_vertical_verylax" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/directions_trip_details_disclaimer_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/text_padding_horizontal_verylax"
            android:layout_marginRight="@dimen/text_padding_horizontal_verylax"
            android:layout_marginTop="@dimen/text_padding_vertical"
            android:layout_marginBottom="@dimen/text_padding_vertical"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/directions_trip_details_disclaimer_source"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:drawablePadding="@dimen/text_padding_horizontal_lax"
                android:gravity="bottom|left"
                android:maxLines="2"
                android:textSize="@dimen/font_size_disclaimer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom|right"
                android:text="@string/disclaimer_responsibility_2line"
                android:textSize="@dimen/font_size_disclaimer"
                tools:ignore="TextSizeCheck" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/directions_trip_details_next_event"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/directions_trip_details_next_event_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:gravity="center">
                <LinearLayout
                    android:id="@+id/directions_trip_details_next_event_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="-20dp"
                        android:layout_marginBottom="-20dp"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/directions_trip_details_next_event_time_hourglass"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:tint="@color/fg_trip_next_event_normal"
                            android:src="@drawable/ic_hourglass_black_24dp"/>
                        <TextView
                            android:id="@+id/directions_trip_details_next_event_time_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/fg_trip_next_event_normal"
                            android:paddingHorizontal="20dp"
                            android:textSize="@dimen/directions_trip_details_next_event_time_fontsize"
                            android:textStyle="bold"/>
                        <Chronometer
                            android:id="@+id/directions_trip_details_next_event_time_chronometer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/fg_trip_next_event_normal"
                            android:paddingHorizontal="20dp"
                            android:textSize="@dimen/directions_trip_details_next_event_time_fontsize"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/directions_trip_details_next_event_time_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/fg_trip_next_event_normal"
                            android:textSize="@dimen/directions_trip_details_next_event_time_fontsize_decor"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/directions_trip_details_next_event_time_explain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/fg_trip_next_event_normal"
                        android:gravity="end"
                        android:layout_marginTop="-20dp"
                        android:paddingHorizontal="8dp"
                        android:textSize="@dimen/directions_trip_details_next_event_time_fontsize_explain"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/directions_trip_details_next_event_current_action"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/fg_trip_next_event_normal"
                    android:textSize="@dimen/font_size_normal"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/directions_trip_details_next_event_target"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/fg_trip_next_event_normal"
                    android:gravity="center"
                    android:textSize="@dimen/directions_trip_details_next_event_target_fontsize"/>
                <TextView
                    android:id="@+id/directions_trip_details_next_event_next_action"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/fg_trip_next_event_normal"
                    android:textSize="@dimen/font_size_normal"
                    android:gravity="center"/>
                <LinearLayout
                    android:id="@+id/directions_trip_details_next_event_positions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/directions_trip_details_next_event_position_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="0dp"
                        android:paddingHorizontal="8dp"
                        android:textStyle="bold"
                        android:textSize="@dimen/directions_trip_details_next_event_position_from_fontsize"
                        android:background="@color/bg_position"
                        android:textColor="@color/fg_position"/>
                    <TextView
                        android:id="@+id/directions_trip_details_next_event_positions_walk_arrow"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/fg_trip_next_event_normal"
                        android:paddingBottom="10dp"
                        android:paddingHorizontal="8dp"
                        android:textSize="@dimen/directions_trip_details_next_event_position_to_fontsize"
                        android:text="➜"
                        tools:ignore="HardcodedText" />
                    <ImageView
                        android:id="@+id/directions_trip_details_next_event_positions_walk_icon"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/fg_trip_next_event_normal" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/fg_trip_next_event_normal"
                        android:paddingBottom="10dp"
                        android:paddingHorizontal="8dp"
                        android:textSize="@dimen/directions_trip_details_next_event_position_to_fontsize"
                        android:text="➜"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/directions_trip_details_next_event_position_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="0dp"
                        android:paddingHorizontal="8dp"
                        android:textStyle="bold"
                        android:textSize="@dimen/directions_trip_details_next_event_position_to_fontsize"
                        android:background="@color/bg_position"
                        android:textColor="@color/fg_position"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/directions_trip_details_next_event_departure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/fg_trip_next_event_normal"
                    android:gravity="center"
                    android:textSize="@dimen/directions_trip_details_next_event_departure_fontsize"/>
                <LinearLayout
                    android:id="@+id/directions_trip_details_next_event_connection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <de.schildbach.oeffi.stations.LineView
                        android:id="@+id/directions_trip_details_next_event_connection_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/directions_trip_details_next_event_connection_line_fontsize"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/fg_trip_next_event_normal"
                        android:paddingBottom="10dp"
                        android:paddingHorizontal="8dp"
                        android:textSize="@dimen/directions_trip_details_next_event_connection_to_fontsize"
                        android:text="➜"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/directions_trip_details_next_event_connection_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/fg_trip_next_event_normal"
                        android:textStyle="italic"
                        android:textSize="@dimen/directions_trip_details_next_event_connection_to_fontsize"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/directions_trip_details_next_event_changeover"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <LinearLayout
                        android:id="@+id/directions_trip_details_next_event_transfer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/directions_trip_details_next_event_transfer_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tint="@color/fg_trip_next_event_normal"
                                android:src="@drawable/ic_stopwatch_black_24"/>
                            <TextView
                                android:id="@+id/directions_trip_details_next_event_transfer_time_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/fg_trip_next_event_normal"
                                android:textStyle="bold"
                                android:textSize="@dimen/directions_trip_details_next_event_transfer_fontsize"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tint="@color/fg_trip_next_event_normal"
                            android:src="@drawable/ic_hourglass_black_24dp"/>
                        <TextView
                            android:id="@+id/directions_trip_details_next_event_transfer_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/fg_trip_next_event_normal"
                            android:textStyle="bold"
                            android:textSize="@dimen/directions_trip_details_next_event_transfer_fontsize"/>
                        <TextView
                            android:id="@+id/directions_trip_details_next_event_transfer_explain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/fg_trip_next_event_normal"
                            android:layout_marginStart="6dp"
                            android:textSize="@dimen/directions_trip_details_next_event_transfer_explain_fontsize"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/directions_trip_details_next_event_walk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/directions_trip_details_next_event_walk_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tint="@color/fg_trip_next_event_normal"/>
                        <TextView
                            android:id="@+id/directions_trip_details_next_event_walk_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/fg_trip_next_event_normal"
                            android:textStyle="bold"
                            android:textSize="@dimen/directions_trip_details_next_event_transfer_fontsize"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/directions_trip_details_next_event_clock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/directions_trip_details_next_event_clock_fontsize"
                    android:textColor="@color/fg_less_significant">
                </TextView>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</LinearLayout>

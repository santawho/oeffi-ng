<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1" >
            <include layout="@layout/directions_trip_details_individual_entry_element"
                android:id="@+id/directions_trip_details_individual_entry_main_element" />
            <include layout="@layout/directions_trip_details_individual_entry_element"
                android:id="@+id/directions_trip_details_individual_entry_simulated_element" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/directions_trip_details_individual_entry_map"
            android:layout_width="@dimen/action_bar_button_width"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_map_black_24dp"
            android:tint="@color/fg_less_significant" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/directions_trip_details_individual_entry_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_trip_details_time_left"
        android:layout_marginLeft="@dimen/text_padding_horizontal_verylax"
        android:layout_marginRight="@dimen/text_padding_horizontal_verylax"
        android:layout_marginTop="@dimen/text_padding_vertical_verylax"
        android:layout_marginBottom="@dimen/text_padding_vertical_verylax"
        android:paddingTop="@dimen/text_padding_vertical"
        android:paddingBottom="@dimen/text_padding_vertical"
        android:visibility="gone" >
        <TextView
            android:id="@+id/directions_trip_details_individual_entry_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/text_padding_horizontal"
            android:paddingEnd="@dimen/text_padding_horizontal"
            android:gravity="center"
            android:textColor="@color/fg_significant"
            android:textSize="@dimen/font_size_large" />
        <ImageButton
            android:id="@+id/directions_trip_details_individual_entry_progress_bell"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingStart="0dp"
            android:paddingEnd="@dimen/text_padding_horizontal"
            android:src="@drawable/ic_bell_on_black_24dp"
            android:tint="@color/fg_significant" />
    </RelativeLayout>

</LinearLayout>

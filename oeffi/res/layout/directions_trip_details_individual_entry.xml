<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/directions_trip_details_individual_entry_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/text_padding_vertical_lax"
            android:layout_marginBottom="@dimen/text_padding_vertical_lax"
            android:paddingStart="@dimen/text_padding_horizontal_lax"
            android:paddingEnd="@dimen/text_padding_horizontal_lax"
            android:orientation="vertical">
            <TextView
                android:id="@+id/directions_trip_details_individual_entry_time_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="@dimen/font_size_xlarge" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="@dimen/font_size_tiny"
                android:text="min"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/directions_trip_details_individual_entry_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/text_padding_vertical_lax"
            android:layout_marginBottom="@dimen/text_padding_vertical_lax"
            android:paddingStart="0dp"
            android:paddingEnd="@dimen/text_padding_horizontal_lax"/>

        <TextView
            android:id="@+id/directions_trip_details_individual_entry_text"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_padding_vertical_lax"
            android:layout_marginBottom="@dimen/text_padding_vertical_lax"
            android:layout_weight="1"
            android:textSize="@dimen/font_size_large" />

        <ImageButton
            android:id="@+id/directions_trip_details_individual_entry_map"
            android:layout_width="@dimen/action_bar_button_width"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_map_black_24dp"
            android:tint="@color/fg_less_significant" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/directions_trip_details_individual_entry_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_trip_details_time_left"
        android:layout_marginLeft="@dimen/text_padding_horizontal_verylax"
        android:layout_marginRight="@dimen/text_padding_horizontal_verylax"
        android:layout_marginTop="@dimen/text_padding_vertical_verylax"
        android:layout_marginBottom="@dimen/text_padding_vertical_verylax"
        android:paddingTop="@dimen/text_padding_vertical"
        android:paddingBottom="@dimen/text_padding_vertical"
        android:visibility="gone" >
        <TextView
            android:id="@+id/directions_trip_details_individual_entry_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingStart="@dimen/text_padding_horizontal"
            android:paddingEnd="@dimen/text_padding_horizontal"
            android:gravity="center"
            android:textColor="@color/fg_significant"
            android:textSize="@dimen/font_size_large" />
        <ImageButton
            android:id="@+id/directions_trip_details_individual_entry_progress_bell"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingStart="0dp"
            android:paddingEnd="@dimen/text_padding_horizontal"
            android:src="@drawable/ic_bell_on_black_24dp"
            android:tint="@color/fg_significant" />
    </RelativeLayout>

</LinearLayout>

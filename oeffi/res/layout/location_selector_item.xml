<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="0dp"
    android:layout_weight="1">

    <TextView
        android:id="@+id/location_selector_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/location_selector_height"
        android:gravity="center"
        android:background="@drawable/location_selector_item_unselected_background"
        android:textColor="@color/fg_significant"
        android:textStyle="bold"
        android:textSize="@dimen/font_size_normal"
        android:paddingVertical="0dp"
        android:paddingHorizontal="0dp"
        />

    <ImageView
        android:id="@+id/location_selector_pinned"
        android:layout_width="@dimen/location_selector_pinned_size"
        android:layout_height="@dimen/location_selector_pinned_size"
        android:layout_marginVertical="@dimen/location_selector_pinned_margin_vertical"
        android:layout_marginHorizontal="@dimen/location_selector_pinned_margin_horizontal"
        android:layout_gravity="right|top"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_star_grey600_24dp"
        />

</FrameLayout>

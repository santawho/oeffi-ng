<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/stations_station_details_list_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/elevation_content"
        android:orientation="vertical">

        <include layout="@layout/action_bar" />

        <TextView
            android:id="@+id/stations_station_details_time_text"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/text_padding_horizontal"
            android:gravity="left|center_vertical"
            android:paddingBottom="@dimen/text_padding_vertical"
            android:paddingLeft="@dimen/text_padding_horizontal_lax"
            android:paddingTop="@dimen/text_padding_vertical"
            android:singleLine="true"
            android:textSize="@dimen/font_size_large"
            android:textStyle="bold"
            android:background="@color/bg_action_bar_appendix"
            android:textColor="@color/fg_significant"
            />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/stations_station_details_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ViewAnimator
                android:id="@+id/stations_station_details_list_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/stations_station_details_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:scrollbars="none" />

                <TextView
                    android:id="@+id/stations_station_details_result_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/text_padding_horizontal_verylax"
                    android:layout_marginRight="@dimen/text_padding_horizontal_verylax"
                    android:gravity="center"
                    android:textSize="@dimen/font_size_large" />
            </ViewAnimator>

            <LinearLayout
                android:id="@+id/stations_station_details_disclaimer_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/text_padding_horizontal_verylax"
                android:layout_marginRight="@dimen/text_padding_horizontal_verylax"
                android:layout_marginTop="@dimen/text_padding_vertical"
                android:layout_marginBottom="@dimen/text_padding_vertical"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/stations_station_details_disclaimer_source"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/text_padding_horizontal_lax"
                    android:gravity="bottom|left"
                    android:maxLines="2"
                    android:textSize="@dimen/font_size_disclaimer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom|right"
                    android:text="@string/disclaimer_responsibility_2line"
                    android:textSize="@dimen/font_size_disclaimer" />
            </LinearLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>

    <include layout="@layout/map_frame" />

</LinearLayout>

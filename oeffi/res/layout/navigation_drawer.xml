<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/layout_navigation_drawer_width"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:orientation="vertical"
    android:background="#00000000">

    <TextView
        android:id="@+id/navigation_drawer_status_bar_offset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80808080" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/bg_level0" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:showDividers="end"
            android:divider="@drawable/list_divider" >
            <LinearLayout
                android:id="@+id/navigation_drawer_voice_control"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/list_divider"
                android:paddingBottom="@dimen/text_padding_vertical_verylax"
                android:paddingLeft="@dimen/text_padding_horizontal_verylax"
                android:paddingRight="@dimen/text_padding_horizontal_verylax"
                android:paddingTop="@dimen/text_padding_vertical_verylax">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/text_padding_horizontal_lax"
                    android:scaleType="fitCenter"
                    android:tint="#FF757575"
                    android:src="@drawable/ic_microphone_black_24dp" />
                <Switch
                    android:id="@+id/navigation_drawer_voice_control_toggle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/font_size_large"
                    android:text="@string/user_interface_voice_control_toggle_on_title" />
                <TextView
                    android:id="@+id/navigation_drawer_voice_control_trigger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/font_size_large"
                    android:text="@string/user_interface_voice_control_trigger_title" />
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/navigation_drawer_list"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/navigation_drawer_share"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/text_padding_vertical_verylax"
            android:background="@color/bg_divider">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/text_padding_horizontal_verylax"
                android:gravity="center"
                android:src="@drawable/ic_share_grey600_24dp"/>
            <TextView
                android:id="@+id/navigation_drawer_share_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:lines="2"
                android:layout_marginLeft="@dimen/text_padding_horizontal_verylax"
                android:layout_marginRight="@dimen/text_padding_horizontal_lax"
                android:gravity="center"
                android:textSize="@dimen/font_size_large"
                android:text="@string/global_options_share_app_title"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/navigation_drawer_share_qrcode"
                android:layout_height="@dimen/navigation_drawer_share_qrcode"
                android:layout_width="@dimen/navigation_drawer_share_qrcode"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/text_padding_horizontal_verylax"
                android:layout_marginRight="@dimen/text_padding_horizontal_verylax"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:src="@drawable/qr_update"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/navigation_drawer_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_padding_vertical_verylax"
            android:layout_marginTop="@dimen/text_padding_vertical_verylax"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/navigation_drawer_footer_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_padding_horizontal_verylax"
                android:src="@drawable/ic_favorite_border_grey600_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_padding_horizontal_verylax"
                android:layout_marginRight="@dimen/text_padding_horizontal_verylax"
                android:text="@string/navigation_drawer_message"
                android:textColor="#888"
                android:textSize="@dimen/font_size_small" />
        </LinearLayout>

        <Space
            android:id="@+id/navigation_drawer_bottom_offset"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>
</LinearLayout>

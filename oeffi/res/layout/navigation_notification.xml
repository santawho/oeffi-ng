<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:id="@+id/navigation_notification_next_event_finished"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/directions_trip_details_finished"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:textSize="@dimen/navigation_notification_next_event_time_fontsize"
        android:textStyle="bold"/>
    <LinearLayout
        android:id="@+id/navigation_notification_next_event_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="-10dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/navigation_notification_next_event_time_hourglass"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_hourglass_black_24dp"/>
            <TextView
                android:id="@+id/navigation_notification_next_event_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:textSize="@dimen/navigation_notification_next_event_time_fontsize"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/navigation_notification_next_event_time_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/navigation_notification_next_event_time_fontsize_decor"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:id="@+id/navigation_notification_next_event_time_explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="-20dp"
            android:paddingHorizontal="8dp"
            android:textSize="@dimen/navigation_notification_next_event_time_fontsize_explain"/>
    </LinearLayout>
    <TextView
        android:id="@+id/navigation_notification_next_event_current_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_small"
        android:gravity="center"/>
    <TextView
        android:id="@+id/navigation_notification_next_event_target"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/navigation_notification_next_event_target_fontsize"/>
    <TextView
        android:id="@+id/navigation_notification_next_event_next_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_small"
        android:gravity="center"/>
    <LinearLayout
        android:id="@+id/navigation_notification_next_event_positions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/navigation_notification_next_event_position_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="0dp"
            android:paddingHorizontal="8dp"
            android:textStyle="bold"
            android:textSize="@dimen/navigation_notification_next_event_position_from_fontsize"
            android:background="@color/bg_position"
            android:textColor="@color/fg_position"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingHorizontal="8dp"
            android:textSize="@dimen/navigation_notification_next_event_position_to_fontsize"
            android:text="➜"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/navigation_notification_next_event_position_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="0dp"
            android:paddingHorizontal="8dp"
            android:textStyle="bold"
            android:textSize="@dimen/navigation_notification_next_event_position_to_fontsize"
            android:background="@color/bg_position"
            android:textColor="@color/fg_position"/>
    </LinearLayout>
    <TextView
        android:id="@+id/navigation_notification_next_event_departure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/navigation_notification_next_event_departure_fontsize"/>
    <LinearLayout
        android:id="@+id/navigation_notification_next_event_connection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/navigation_notification_next_event_connection_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp"
            android:textSize="@dimen/navigation_notification_next_event_connection_line_fontsize"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingHorizontal="8dp"
            android:textSize="@dimen/navigation_notification_next_event_connection_to_fontsize"
            android:text="➜"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/navigation_notification_next_event_connection_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="@dimen/navigation_notification_next_event_connection_to_fontsize"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/navigation_notification_next_event_changeover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/navigation_notification_next_event_transfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_hourglass_black_24dp"/>
            <TextView
                android:id="@+id/navigation_notification_next_event_transfer_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/navigation_notification_next_event_transfer_fontsize"/>
            <TextView
                android:id="@+id/navigation_notification_next_event_transfer_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textSize="@dimen/navigation_notification_next_event_transfer_explain_fontsize"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/navigation_notification_next_event_walk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/navigation_notification_next_event_walk_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/navigation_notification_next_event_walk_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/navigation_notification_next_event_transfer_fontsize"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
